    <bean id="actor" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" name="name" value="Robert Downey Jr" type="java.lang.String"/>
        <constructor-arg index="1" name="gender" value="Male" type="java.lang.String"/>
        <constructor-arg index="2" name="age" value="54" type="int"/>
    </bean>

    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Chris Evans" />
        <constructor-arg name="gender" value="Male" />
        <constructor-arg name="age" value="38" />
    </bean>

    <bean id="actor3" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Chris Hemsworth" />
        <constructor-arg name="gender" value="Male" />
        <constructor-arg name="age" value="36" />
    </bean>

    <bean id="beanLifeCycle" class="com.stackroute.demo.BeanLifecycleDemoBean"/>

    <bean id="beanPostProcessor" class="com.stackroute.demo.BeanPostProcessorDemoBean" />

